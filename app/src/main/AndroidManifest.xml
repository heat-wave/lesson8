<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ifmo.md.lesson8" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.ifmo.md.lesson8.ItemListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.ifmo.md.lesson8.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="ru.ifmo.md.lesson8.ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
        <provider
            android:name="ru.ifmo.md.lesson8.contentprovider.WeatherContentProvider"
            android:authorities="ru.ifmo.md.lesson8.contentprovider" >
            </provider>
    </application>

</manifest>
